<UserControl x:Class="Catchem.Pages.AccountSettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Catchem.Pages"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="clr-namespace:Catchem.Pages"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="../Styles.xaml" />
    </UserControl.Resources>
    <TabControl x:Name="tabControl"
                Margin="0,0,0,0"
                VerticalContentAlignment="Top"
                IsEnabled="False"
                RenderTransformOrigin="0.5,0.5">
        <TabControl.RenderTransform>
            <TransformGroup>
                <ScaleTransform />
                <SkewTransform />
                <RotateTransform />
                <TranslateTransform />
            </TransformGroup>
        </TabControl.RenderTransform>
        <TabItem Header="Settings">
            <pages:SettingsPage x:Name="BotSettingsPage"
                                Width="Auto"
                                Height="Auto"
                                Margin="0" />
        </TabItem>
        <TabItem Header="Map &amp; Console">
            <Grid Margin="0" Background="#FFE5E5E5">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="220"/>
                </Grid.RowDefinitions>
                <pages:MapPage x:Name="BotMapPage"
                               Grid.Row="0"
                               Width="Auto"
                               Height="Auto"
                               Margin="0" />
                <GridSplitter x:Name="gridSplitter"
                              Grid.Row="1"
                              Height="3"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Top"
                              ResizeDirection="Rows">
                    <GridSplitter.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Offset="0" Color="#FFADFB80" />
                            <GradientStop Offset="1" Color="#FF33D47C" />
                        </LinearGradientBrush>
                    </GridSplitter.Background>
                </GridSplitter>
                <RichTextBox x:Name="consoleBox"
                             Background="#FF252525"
                             Block.LineHeight="1"
                             Grid.Row="1"
                             Foreground="#FFCDCDCD"
                             VerticalScrollBarVisibility="Visible" Margin="0,3,0,0">
                </RichTextBox>
            </Grid>
        </TabItem>
        <TabItem Header="Information">
            <pages:PlayerPage x:Name="BotPlayerPage"
                              Width="Auto"
                              Height="Auto" />
        </TabItem>
        <TabItem Header="Pokemon Lists Settings">
            <pages:PokemonListPage x:Name="BotPokemonListPage"
                                   Width="Auto"
                                   Height="Auto"
                                   Margin="0" />
        </TabItem>

    </TabControl>
</UserControl>
